<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace의 이름은 사용하려는 DAO의 풀패키지명과 동일하게 작성 -->
<mapper namespace="com.winter.app.product.ProductDAO">
	<select id="list" resultType="ProductDTO">
		SELECT *
		FROM PRODUCT p
		ORDER BY p.PRODUCT_NUM DESC
	</select>
	<select id="select" parameterType="ProductDTO" resultType="ProductDTO">
		SELECT *
		FROM PRODUCT p
		WHERE PRODUCT_NUM = #{ productNum }
	</select>
</mapper>